
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 550,
 "height": 400,

  "selection": {
 "Type_highlight": {
 "type": "multi",
 "fields": ["Type"],
 "bind": "legend"
 }
  },
  "title": "Unemployment Rates in US from 2000 to 2020 across different ethnicity group.",
  "data": {"url": "https://raw.githubusercontent.com/wlai0013/FIT3179/master/Assignment2/data/UnemploymentRates2000-2020.csv"},
  "transform": [
    {"filter": "datum.Type == 'White' || datum.Type == 'Black/AfricanAmerican' || datum.Type == 'Asian' || datum.Type == 'Hispanic/Latino'"}
  ],
  "mark": "line",
  "encoding": {
    "x": {"field": "Date", "type": "temporal"},
    "y": {"field": "Unemployment Rates", "type": "quantitative"},
    "color": {"field": "Type", "type": "nominal"
    },
     "tooltip": [
 {"field": "Month", "type": "nominal", "title": "Month"},
  {"field": "Year", "type": "nominal", "title": "Year"},
    {"field": "Type", "type": "nominal", "title": "Type"},
 {"field": "Unemployment Rates", "type": "quantitative", "format": ".2f", "title": "Unemployment Rates"}
    ],
    "opacity": {
 "condition": {"selection": "Type_highlight", "value": 1},
 "value": 0.2
 }
  }
}
