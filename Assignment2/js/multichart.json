{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/wlai0013/FIT3179/master/Assignment2/data/UnemploymentRatesByEthnicity.csv"},

  "hconcat": [
  {
  "title": "Unemployment Rates in US in 2020",
  "data": {"url": "https://raw.githubusercontent.com/wlai0013/FIT3179/master/Assignment2/data/usa_unemployment2020.csv"},
  "width": 250,
 "height": 200,
  "mark": "bar",
  "encoding": {
    "x": {
      "timeUnit": "month", "field": "Date", "title": "Month"
    },
    "y": {"aggregate": "mean", "field": "Total", "title": "Unemployment Rates"},

     "tooltip": [
 {"field": "Month", "type": "nominal", "title": "Month"},
  {"field": "Year", "type": "nominal", "title": "Year"},
 {"field": "Total", "type": "quantitative", "format": ".2f", "title": "Unemployment Rates"}
    ]
  
  }
},
 {
  "width": 250,
  "height": 200,
    "title": "Unemployment Rates for different Ethnicity groups in 2020",
  "mark": "area",
  "selection": {
 "Ethnicity_highlight": {
 "type": "multi",
 "fields": ["Ethnicity"],
 "bind": "legend"
 }
  },
  "encoding": {
"x": {
      "timeUnit": "month", "field": "Date", "title": "Month"
    },   
    "y": {
      "aggregate": "sum", "field": "UnemploymentRates", "title": "Unemployment Rates"
    },
    "color": {
      "field": "Ethnicity",
      "scale": {"scheme": "set2"}
    },
    "tooltip": [
{"field": "Ethnicity", "type": "nominal", "title": "Ethnicity"},
 {"field": "Month", "type": "nominal", "title": "Month"},
 {"field": "Year", "type": "nominal", "title": "Year"},
 {"field": "UnemploymentRates", "type": "quantitative", "format": ".2f"}
    ],
    "opacity": {
 "condition": {"selection": "Ethnicity_highlight", "value": 1},
 "value": 0.2
 }
  }  
  
 }
 
  ]
}
